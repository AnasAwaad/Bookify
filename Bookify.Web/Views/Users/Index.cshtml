		<div class="card-toolbar">
			@* data for generic modal *@
			<a href="javascript:;" data-modal-title="Create User" data-url="/Users/Create" class="btn btn-sm btn-primary js-render-modal">
				<i class="bi bi-plus-lg"></i>
				Add
			</a>
		</div>
	</div>
	<div class="card-body">


		<div class="card card-p-0 card-flush">
			<partial name="_DataTableCardHeader" />
			<div class="card-body">
				<table class="table align-middle rounded table-row-dashed fs-6 g-5 js-datatables" data-export-title="Users ">
					<thead>
						<tr class="fw-semibold fs-6 text-gray-800 border-gray-200">
							<th>FullName</th>
							<th>Username</th>
							<th>Email</th>
							<th>IsActive</th>
							<th>Created On</th>
							<th>Last Updated On</th>
							<th>IsLocked</th>
							<th class="js-no-export">Actions</th>
						</tr>
					</thead>
					<tbody class="fw-semibold text-gray-600">

						@foreach (var User in Model)
						{
							<partial name="_UserRow" model="User" />
						}

					</tbody>
				</table>
			</div>
		</div>


	</div>

</div>
@Html.AntiForgeryToken()
@section Scripts {

	<partial name="_ValidationScriptsPartial" />

}
@section DataTableScripts {
	<script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
}
@section DataTableStyles {
	<link href="~/assets/plugins/datatables/datatables.bundle.css" rel="stylesheet" />
}
