@{
    ViewBag.Title = "Book Report";
}
<div class="row g-6 g-xl-9 mb-6 mb-xl-9">


    <!--begin::Col-->
    <div class="col-md-6 col-lg-4 col-xl-3">
        <!--begin::Card-->
        <div class="card h-100 ">
            <!--begin::Card body-->
            <div class="card-body d-flex justify-content-center text-center flex-column p-8">
                <!--begin::Name-->
                <a asp-action="Book" class="text-gray-800 text-hover-primary d-flex flex-column">
                    <!--begin::Image-->
                    <div class="symbol symbol-60px mb-5">
                        <img src="/assets/images/analysis.png" class="theme-light-show" alt="analysis image">
                        <img src="/assets/images/analysis.png" class="theme-dark-show" alt="analysis image">

                    </div>
                    <!--end::Image-->
                    <!--begin::Title-->
                    <div class="fs-5 fw-bold mb-2">
                        Books
                    </div>
                    <!--end::Title-->
                </a>
                <!--end::Name-->
                
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Col-->
    <!--begin::Col-->
    <div class="col-md-6 col-lg-4 col-xl-3">
        <!--begin::Card-->
        <div class="card h-100 ">
            <!--begin::Card body-->
            <div class="card-body d-flex justify-content-center text-center flex-column p-8">
                <!--begin::Name-->
                <a asp-action="Rentals" class="text-gray-800 text-hover-primary d-flex flex-column">
                    <!--begin::Image-->
                    <div class="symbol symbol-60px mb-5">
                        <img src="/assets/images/analysis.png" class="theme-light-show" alt="analysis image">
                        <img src="/assets/images/analysis.png" class="theme-dark-show" alt="analysis image">

                    </div>
                    <!--end::Image-->
                    <!--begin::Title-->
                    <div class="fs-5 fw-bold mb-2">
                        Reports
                    </div>
                    <!--end::Title-->
                </a>
                <!--end::Name-->

            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
    <!--end::Col-->


</div>