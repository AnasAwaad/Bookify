@{
	ViewData["Title"] = "Search for a book";
}
<div class="card mb-12">
	<!--begin::Hero body-->
	<div class="card-body flex-column p-5">
		<!--begin::Hero content-->
		<div class="d-flex align-items-center h-lg-300px p-5 p-lg-15">
			<!--begin::Wrapper-->
			<div class="d-flex flex-column align-items-start justift-content-center flex-equal me-5">
				<!--begin::Title-->
				<h1 class="fw-bold fs-4 fs-lg-1 text-gray-800 mb-5 mb-lg-10">Search for a book</h1>
				<!--end::Title-->
				<!--begin::Input group-->
				<div class="position-relative w-100">
					<i class="las la-search fs-2 text-primary position-absolute top-50 translate-middle ms-8 z-index-3"></i>
					<input type="text" id="SearchBook" class="form-control fs-4 py-4 ps-14 text-gray-700 placeholder-gray-500 mw-500px" name="search" value="" placeholder="Search by title or author name">
				</div>
				<!--end::Input group-->
			</div>
			<!--end::Wrapper-->
			<!--begin::Wrapper-->
			<div class="flex-equal d-flex justify-content-center align-items-end ms-5">
				<!--begin::Illustration-->
				<img src="~/assets/images/20.png" alt="" class="mw-100 mh-125px mh-lg-275px mb-lg-n12">
				<!--end::Illustration-->
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Hero content-->
	</div>
	<!--end::Hero body-->
</div>
@section Styles{
	<link href="~/lib/typeahead.js/typeahead.css" rel="stylesheet" />
}
@section Plugins{
	<script src="~/lib/typeahead.js/typeahead.bundle.min.js"></script>
	<script src="~/lib/handlebars.js/handlebars.min.js"></script>
}
@section Scripts{
	<script src="~/js/search-book.js"></script>
}